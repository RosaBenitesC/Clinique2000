@model Clinique2000_Models.Models.Patient
<h1>Inscription d'un patient</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroAssuranceMaladie" class="control-label"></label>
                <input asp-for="NumeroAssuranceMaladie" class="form-control" placeholder="ABCD 1532 2689" />
                <span asp-validation-for="NumeroAssuranceMaladie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courriel" class="control-label"></label>
                <input asp-for="Courriel" class="form-control" value=@Model.Courriel />
                <span asp-validation-for="Courriel" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DatedeNaissance" class="control-label"></label>
                <input asp-for="DatedeNaissance" class="form-control" type="date" value="2006-01-08" />
                <span asp-validation-for="DatedeNaissance" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="CodePostal" class="control-label"></label>
                <input asp-for="CodePostal" class="form-control" />
                <span asp-validation-for="CodePostal" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" value=@Model.UserId />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Envoyer</button>

            </div>
        </form>

    </div>
</div>